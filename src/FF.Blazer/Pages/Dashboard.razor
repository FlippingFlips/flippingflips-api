@page "/"
@inject IVersionProvider VersionProvider

<Container>
    <Row>       
        <Column>
            <AuthorizeView>
                <Authorized>
                    Welcome @context.User.Identity.Name
                </Authorized>
                <NotAuthorized>
                    <Alert Color="Color.Primary" Visible>
                        <Heading Size="HeadingSize.Is3" TextAlignment="TextAlignment.Start" Margin="Margin.Is3.FromBottom">Flipping Flips</Heading>
                        <Paragraph>
                            Saving game history for homebrew Pinball games.
                        </Paragraph>
                        <div class="row mb-2">
                            <div class="col-12">
                                <h3>What is this?</h3>
                            </div>
                            <div class="col-12">
                                A game logger, score keeper for homebrew pinball games. Up to 4 players each game depending if the game supports multiplayer.
                            </div>
                        </div>
                        <hr />

                        <div class="row mb-2">
                            <div class="col-12">
                                <h3>Who is it for?</h3>
                            </div>
                            <div class="col-12">
                                Players that are interested in keeping score when playing virtual pinball simulations or for authors of these games to implement an online score log.<br />
                                This isn't intended as a High Score leaderboard but that's entirely up to you.<br />
                            </div>
                        </div>
                        <hr />

                        <div class="row mb-2">
                            <div class="col-12">
                                <h3>What pinball games are compatible?</h3>
                                <ul>
                                    <li>Visual Pinball Originals</li>
                                    <li>Visual Pinball EMs</li>
                                    <li>Visual Pinball PinMame</li>
                                    <li>Future Pinball</li>
                                </ul>
                            </div>
                        </div>
                    </Alert>
                </NotAuthorized>
            </AuthorizeView>            
        </Column>
    </Row>    
</Container>
